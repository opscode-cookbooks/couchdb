# EDITS TO THIS FILE WILL BE LOST!!!
#
[log]
writer = file
file = <%= @logpath %>/couchdb.log
level = <%= @loglevel %>

[couchdb]
data_dir = <%= @datapath %>
view_index_dir = <%= @datapath %>

[chttpd]
port = <%= @clusterport %>
bind_address = <%= @clusterbindaddress %>

[httpd]
port = <%= @localport %>

<% @config.each do |section, parameters| %>
[<%= section %>]
<% parameters.each do |key, value| %>
<%= key %> = <%= value %>
<% end %>

<% end %>
